%h1.title Point of Interest by radius

= form_tag locations_path, method: :post do

  = label :location, :latitude, 'Latitude'
  = text_field :location, :latitude

  = label :location, :longitude, 'Longitude'
  = text_field :location, :longitude

  = label :location, :radius, 'Radius'
  = text_field :location, :radius

  %p
  = submit_tag 'Save Changes'